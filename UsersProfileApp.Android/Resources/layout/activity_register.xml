<?xml version="1.0" encoding="UTF-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="@dimen/loginMargin"
        android:layout_marginLeft="@dimen/loginMargin"
        android:layout_gravity="center_horizontal"
        android:textSize="25sp"
        android:text="@string/registerAccount"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/registerTopMargin"
        android:layout_marginLeft="@dimen/textviewMargin"
        android:text="@string/username"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/usernameWrapper"
        android:layout_marginRight="@dimen/loginMargin"
        android:layout_marginLeft="@dimen/loginMargin"
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
       <EditText
        android:id="@+id/regUsernameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/registerUser"
        android:ems="13"
        android:textSize="14dp"
        android:fontFamily="sans-serif"
        android:inputType="textEmailAddress"/>
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="@dimen/textviewMargin"
        android:text="@string/password"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/passwordWrapper"
        android:layout_marginLeft="@dimen/loginMargin"
        android:layout_marginRight="@dimen/loginMargin"
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
         android:id="@+id/regPasswordEditText"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:hint="@string/registerPassword"
         android:fontFamily="sans-serif"
         android:textSize="14dp"
         android:ems="13"
         android:inputType="textPassword"/>
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/loginMargin"
        android:layout_marginRight="@dimen/loginMargin"
        android:layout_marginTop="@dimen/registervalidpswd"
        android:fontFamily="sans-serif"
        android:text="@string/regRequirement"/>

    <Button
        android:id="@+id/registerButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/registervalidpswd"
        android:padding="@dimen/buttonPadding"
        android:textAllCaps="false"
        android:layout_marginRight="@dimen/loginMargin"
        android:layout_marginLeft="@dimen/loginMargin"
        android:backgroundTint="@color/colorprimaryButton"
        android:textColor="@android:color/white"
        android:text="@string/registerButton"/>
</LinearLayout>